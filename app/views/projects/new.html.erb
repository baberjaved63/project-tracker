<h1 class="text-center">New Project</h1>

<%= form_with model: @project, url: projects_path, class: "card p-4 shadow-lg mx-auto", style: "max-width: 500px;" do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: "form-label" %>
    <%= f.select :status, Project.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select" %>
  </div>

  <%= f.submit "Create Project", class: "btn btn-success w-100" %>
<% end %>

<div class="mt-3 text-center">
  <%= link_to "Back to Projects", projects_path, class: "btn btn-outline-secondary" %>
</div>
